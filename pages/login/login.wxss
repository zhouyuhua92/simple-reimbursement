/* pages/login/login.wxss */
.header-wrapper {
  text-align: center;
  margin-top: 20rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
}

.content-wrapper {
  margin: 100rpx 50rpx 0 50rpx;
}

.phone-wrapper {
  flex-grow: 1;
  margin-left: 22rpx;
  margin-top: 7rpx;
}

.phone-box {
  display: flex;
  justify-content: space-between;
  padding-bottom: 11rpx;
  padding-top: 42rpx;
  border-bottom: 1rpx solid #ccc;
  height: 60rpx;
  line-height: 60rpx;
}

.icon-color {
  color: #999;
  margin-left: 5rpx
}
.zc-box{
  font-size: 30rpx;
	color: #999999;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.checkcode-text {
  min-width: 168rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  border: solid 1rpx #f13a3a;
  color: #f13a3a;
  text-align: center;
  font-size: 26rpx;
}
.logo_txt{ color: #1989fa; font-size: 40rpx; font-weight: bold; font-family: "微软雅黑"}
.phone-placeholder {
  color: #999;
  font-size: 36rpx;
}

.phone-text {
  font-size: 36rpx;
  color: #333;
}

.submit-wrapper {
  width: 600rpx;
  margin: 50rpx auto 0;
}

.submit-btn {
  background-image: -webkit-linear-gradient(90deg, #f15959 0%, #f13a3a 100%), -webkit-linear-gradient(#fff, #fff);
  background-image: linear-gradient(90deg, #1989fa 0%, #1989fa 100%), linear-gradient(#fff, #fff);
  box-shadow: 0 7rpx 30rpxfont-s 0 rgba(255, 61, 2, 0.2);
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #fff;
  height: 88rpx;
  line-height: 88rpx;
} 


.login-code{
  width: 200rpx;
  height: 80rpx;
}